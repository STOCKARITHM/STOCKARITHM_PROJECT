// InsertionSort to be used within bucket sort
//testing this committ 
<script language = "JavaScript">



//alternate radixsort
function RadixSort(array){

  //get number of digits stored in array
  var n=array.length;
  
  var max = maximum(array);

  for(var exp=1; m/exp>0; exp*=10){
    CountSort(array,exp);
  }
}

//helper functions for bucketsort above
function maximum(array){
  var n=array.length;
  var max=arr[0];
  for(var i=0; i<n; i++){
    if(array[i]>max){
      max=array[i];
    }
  }
  return max;
}

//another helper function 
function CountSort(array,exp){
  var output=[n];
  var n=array.length;
  var i;
  var count[10]={0};

  for(i=0; i<n; i++){
    count[(array[i]/exp)%10];
  }

  for(i=1; i<10; i++){
    count[i] +=count[i-1];

  }

  for(i=n-1; i>=0; i--){
    output[count[(arr[i]/exp)%10]-1] = array[i];
    count[(arr[i]/exp)%10]--;
  }

  for(i=0; i<n; i++){
    arr[i]=output[i];
  }

}


//function to change 2d array to 1d array based on column specification and row specification 
//the end and start row are inclusive 
function 2dto1d(array, startcolumn, startrow, endcolumn, endrow){

  //new array that will be 1D
  var newarray= [];
  
  //use to increment the 1d array index
  var i=0;
  
  //if there is no change in column just copy downward 
  if(startcolumn==endcolumn){
    for(startrow; startrow<=endrow; startrow++){
      newarray[i]=array[startrow][startcolumn];
      i++;
    }
    return newarray;
  }
  //if there is no change in row simply copy across 
  if(startrow==endrow){
    for(startcolumn; startcolumn<=endcolumn; startcolumn++){
      newarray[i]=array[startrow][startcolumn];
      i++;
    }
    return newarray;
  }
}

var array={0,8,2,4,3,4,1,5,7,0}

RadixSort(array);
for(var i=0; i<array.length; i++){
  document.write(array[i]);
}
    



